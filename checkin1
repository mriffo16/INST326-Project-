category = ["Movies", "TV Shows", "Pop Culture"] 
point_value = ["100", "200", "300']

def category():
    while True:
        print("Select a category: Movies, TV Shows, or Music")
        category = input("Category: ").capitalize()

        if category in ["Movies", "TV Shows", "Music"]:
            break
        else:
            print("Invalid category. Please select Movies, TV Shows, or Music.")

    while True:
        print("Select point value: 100, 200, or 300")
        point_value = input("Point value: ")

        if point_value in ["100", "200", "300"]:
            break
        else:
            print("Invalid point value. Please select 100, 200, or 300.")

    return category, point_value

# Function to randomly select a question
def select_question():
    # Select a random category and point value
    selected_category = random.choice(categories)
    selected_point_value = random.choice(point_values)
    
    # Retrieve the corresponding question from the questions dictionary
    question = questions[selected_category][int(selected_point_value)]
    
    # Display the selected question
    print("AI player selected the question:")
    print(question)

