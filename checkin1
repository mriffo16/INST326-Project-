"""
scores = {1: 0, 2: 0}

# Function to display the scores
def display_scores():
    font = pygame.font.Font(None, 36)
    for player, score in scores.items():
        text = font.render(f"Player {player}: {score}", True, BLACK)
        screen.blit(text, (20, player * 40))

# Function to display the question
def display_question(category, point_value):
    font = pygame.font.Font(None, 24)
    question_text = questions[category][point_value]
    text = font.render(question_text, True, BLACK)
    screen.blit(text, (SCREEN_WIDTH // 2 - text.get_width() // 2, SCREEN_HEIGHT // 2 - text.get_height() // 2))

# Main game loop
running = True
while running:
    screen.fill(WHITE)
    display_scores()
    display_question("Movies", 100)  # Display a sample question
    
    # Handle events
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    pygame.display.flip()

pygame.quit()
